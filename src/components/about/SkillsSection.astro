<section
  id="skills"
  class="py-12 my-12 bg-gradient-to-b from-[var(--background-color)] to-[var(--card-color-transparent)]"
>
  <div class="container max-w-4xl mx-auto px-6 md:px-4">
    <div class="motion-wrapper" data-motion="fadeInUp">
